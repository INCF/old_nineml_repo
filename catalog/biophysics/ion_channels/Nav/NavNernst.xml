<?xml version="1.0" encoding="UTF-8"?>
<NineML xmlns="http://nineml.incf.org/9ML/0.3" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://nineml.incf.org/9ML/0.3/../NineML_h0.3.xsd">
    <ComponentClass name="NavNernst"
                    xmlns="http://nineml.incf.org/9ML/0.3/Biophys">
        <Parameter name="gbar" dimension="membrane_conductance"/>  
        <Parameter name="Aalpha_m" dimension="frequency"/>
        <Parameter name="Kalpha_m" dimension="voltage"/>
        <Parameter name="V0alpha_m" dimension="voltage"/>
        <Parameter name="Abeta_m" dimension="frequency"/>
        <Parameter name="Kbeta_m" dimension="voltage"/>
        <Parameter name="V0beta_m" dimension="voltage"/>
        <Parameter name="Aalpha_h" dimension="frequency"/>
        <Parameter name="Kalpha_h" dimension="voltage"/>
        <Parameter name="V0alpha_h" dimension="voltage"/>
        <Parameter name="Abeta_h" dimension="frequency"/>
        <Parameter name="Kbeta_h" dimension="voltage"/>
        <Parameter name="V0beta_h" dimension="voltage"/>
        <AnalogPort mode="receive" name="v" dimension="voltage"/>
        <AnalogPort mode="receive" name="internalNa" dimension="concentration"/>
        <AnalogPort mode="receive" name="externalNa" dimension="concentration"/>
        <AnalogPort mode="receive" name="celsius" dimension="temperature"/>
        <AnalogPort mode="send" name="i" dimension="current"/>
        <Dynamics>
            <StateVariable name="m">
                <Initial>m_inf</Initial>
            </StateVariable>
            <StateVariable name="h">
                <Initial>h_inf</Initial>
            </StateVariable>
            <Alias name="Faraday">
                <Value units="C/mol">96485.309</Value>
            </Alias>
            <Alias name="UniversalGasConstant">
                <Value units="J/(K * mol)">8.314472</Value>
            </Alias>
            <Alias name="AbsoluteZero">
                <Value units="K">âˆ’273.15</Value>
            </Alias>
            <Alias name="IonicValence">
                <Value>2</Value>
            </Alias>
            <Alias name="zeroConc">
                <Value units="mM">0.0</Value>
            </Alias>
            <Alias name="nerstPotential">
                <MathInline>  
                    log[externalNa / internalNa] * UniversalGasConstant * 
                    (celsius - AbsoluteZero) / (Faraday * IonicValence)
                </MathInline>
            </Alias>
            <Alias name="nernstLowerLimit">
                <Value units="mV">-1e6</Value>
            </Alias>      
            <Alias name="nernstUpperLimit">
                <Value units="mV">1e6</Value>
            </Alias>
            <Alias name="linoi_test">
                <MathInline>abs[(v - V0alpha_m) / Kalpha_m]</MathInline>
            </Alias>
            <Alias name="linoid_bounded">
                <MathInline>Kalpha_m * (1 - ((v - V0alpha_m) / Kalpha_m) / 2)</MathInline>
            </Alias>            
            <Alias name="linoid_unbounded">
                <MathInline>(v - V0alpha_m) / (1 - exp[(v - V0alpha_m) / Kalpha_m])</MathInline>
            </Alias>
            <Alias name="linoid_voltage_bound">
                <Value>1e-6</Value>
            </Alias>
            <Alias name="linoid">
                <math xmlns="http://www.w3.org/1998/Math/MathML">
                    <piecewise>
                        <piece>
                            <ci>linoid_bounded</ci>
                            <apply>
                                <lt/>
                                <ci>linoid_test</ci>
                                <ci>linoid_voltage_bound</ci>
                            </apply>
                        </piece>
                        <otherwise>
                            <ci>linoid_unbounded</ci>
                        </otherwise>
                    </piecewise>
                </math>
            </Alias>          
            <Alias name="Q10">
                <MathInline>pow[3, (celsius - 20) / 10]</MathInline>
            </Alias>
            <Alias name="alpha_m">
                <MathInline>Q10 * Aalpha_m * linoid</MathInline>
            </Alias>
            <Alias name="beta_m">
                <MathInline>Q10 * Abeta_m * exp[(v - V0beta_m) / Kbeta_m]</MathInline>
            </Alias>
            <Alias name="alpha_h">
                <MathInline>Q10 * Aalpha_h * exp[(v - V0alpha_h) / Kalpha_h]</MathInline>
            </Alias>
            <Alias name="beta_h">
                <MathInline>Q10 * Abeta_h / (1 + exp[(v - V0beta_h) / Kbeta_h)]</MathInline>
            </Alias>
            <Alias name="m_inf">
                <MathInline>alpha_m / (alpha_m + beta_m)</MathInline>
            </Alias>
            <Alias name="tau_m">
                <MathInline>1 / (alpha_m + beta_m)</MathInline>
            </Alias>
            <Alias name="h_inf">
                <MathInline>alpha_h / (alpha_h + beta_h)</MathInline>
            </Alias>
            <Alias name="tau_h">
                <MathInline>1 / (alpha_h + beta_h)</MathInline>
            </Alias>
            <Alias name="e_reversal">
                <math xmlns="http://www.w3.org/1998/Math/MathML">
                    <piecewise>
                        <piece>
                            <ci>nerstLowerLimit</ci>
                            <apply><leq/><ci>externalNa</ci><ci>zeroConc</ci></apply>
                        </piece>            
                        <piece>
                            <ci>nerstUpperLimit</ci>
                            <apply>
                                <and/>
                                <apply><leq/><ci>internalNa</ci><ci>zeroConc</ci></apply>
                                <apply><gt/><ci>externalNa</ci><ci>zeroConc</ci></apply>
                            </apply>
                        </piece>
                        <otherwise>
                            <ci>nerstPotential</ci>
                        </otherwise>
                    </piecewise>
                </math>
            </Alias>
            <Regime>
                <AnalogOut port="i">
                    <MathInline>gbar * m * m * m * h * (v - e_reversal)</MathInline>
                </AnalogOut>                
                <TimeDerivative variable="m">
                    <MathInline>(m_inf - m) / m_tau</MathInline>
                </TimeDerivative>
                <TimeDerivative variable="h">
                    <MathInline>(h_inf - h) / h_tau</MathInline>
                </TimeDerivative>
            </Regime>
        </Dynamics>
    </ComponentClass>
</NineML>